<?xml version="1.0"?>
<config>
    <modules>
        <Onpayio_Onpay>
            <version>1.0.0</version>
        </Onpayio_Onpay>
    </modules>
    <global>
        <models>
            <onpay>
                <class>Onpayio_Onpay_Model</class>
            </onpay>
        </models>
        <helpers>
            <onpay>
                <class>Onpayio_Onpay_Helper</class>
            </onpay>
        </helpers>
        <blocks>
            <onpay>
                <class>Onpayio_Onpay_Block</class>
            </onpay>
        </blocks>
        <payment>
            <groups>
                <onpay>OnPay.io</onpay>
            </groups>
        </payment>
    </global>
    <default>
        <payment>
            <onpay>
                <group>onpay</group>
            </onpay>
            <onpay_card>
                <model>onpay/method_card</model>
                <title>OnPay.io - Credit Card</title>
                <active>1</active>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
                <order_status>pending</order_status>
                <order_status_after_payment>processing</order_status_after_payment>
                <group>onpay</group>
            </onpay_card>
        </payment>
    </default>
    <frontend>
        <routers>
            <onpay>
                <use>standard</use>
                <args>
                    <module>Onpayio_Onpay</module>
                    <frontName>onpay</frontName>
                </args>
            </onpay>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <onpay after="Mage_Adminhtml">Onpayio_Onpay_Adminhtml</onpay>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
